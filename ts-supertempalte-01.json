{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.2",
    "parameters": {
        "name": {
            "type": "string",
            "defaultValue": "vmdemodev001",
            "metadata": {
                "description": "Name of the Virtual Machine"
            }
        },
        "stage": {
            "type": "string",
            "defaultValue": "dev",
            "allowedValues": [
                "dev",
                "tst",
                "preprod",
                "prod"
            ],
            "metadata": {
                "description": "Stage/Umgebung für Namenskonventionen (dev, tst, preprod, prod)"
            }
        },
        "landingZoneType": {
            "type": "string",
            "defaultValue": "online",
            "allowedValues": [
                "online",
                "corp"
            ],
            "metadata": {
                "description": "Landing Zone Typ. 'online' erstellt Public IP + fixen AddressSpace 10.0.0.0/16. 'corp' ohne Public IP; AddressSpace/Subnet per Parameter."
            }
        },
        "corpAddressSpace": {
            "type": "string",
            "defaultValue": "10.10.0.0/16",
            "metadata": {
                "description": "Nur für landingZoneType = corp: VNet Address Space (CIDR)."
            }
        },
        "corpSubnetPrefix": {
            "type": "string",
            "defaultValue": "10.10.0.0/24",
            "metadata": {
                "description": "Nur für landingZoneType = corp: Subnet Prefix (CIDR)."
            }
        },
        "vmSize": {
            "type": "string",
            "defaultValue": "Standard_B2ms",
            "allowedValues": [
                "Standard_B2ms",
                "Standard_D4as_v5",
                "Standard_E8ds_v5"
            ],
            "metadata": {
                "description": "Weitere VM-Sizes sind möglich, hier drei empfohlene Größen"
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Admin username for the VM"
            }
        },
        "adminPublicKey": {
            "type": "string",
            "metadata": {
                "description": "SSH public key (OpenSSH format) for the VM"
            }
        },
        "sshSourcePrefix": {
            "type": "string",
            "defaultValue": "*",
            "metadata": {
                "description": "Quelle/CIDR für SSH-Zugriff (z. B. 203.0.113.0/24). * = überall (nicht empfohlen)"
            }
        },
        "httpSourcePrefix": {
            "type": "string",
            "defaultValue": "*",
            "metadata": {
                "description": "Quelle/CIDR für HTTP-Zugriff"
            }
        }
    },
    "variables": {
        "location": "Germany West Central",
        "stageLower": "[toLower(parameters('stage'))]",
        "nicName": "[concat('nic-', parameters('name'), '-', variables('stageLower'), '-001')]",
        "ipName": "[concat('pip-', parameters('name'), '-', variables('stageLower'), '-001')]",
        "vnetName": "[concat('vnet-', parameters('name'), '-', variables('stageLower'), '-001')]",
        "subnetName": "default",
        "nsgName": "[concat('nsg-', parameters('name'), '-', variables('stageLower'), '-001')]",
        "ipConfigurationsOnline": [
            {
                "name": "ipconfig1",
                "properties": {
                    "subnet": {
                        "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('subnetName'))]"
                    },
                    "privateIPAllocationMethod": "Dynamic",
                    "publicIPAddress": {
                        "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('ipName'))]"
                    }
                }
            }
        ],
        "ipConfigurationsCorp": [
            {
                "name": "ipconfig1",
                "properties": {
                    "subnet": {
                        "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('subnetName'))]"
                    },
                    "privateIPAllocationMethod": "Dynamic"
                }
            }
        ]
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2022-11-01",
            "name": "[variables('ipName')]",
            "location": "[variables('location')]",
            "condition": "[equals(parameters('landingZoneType'), 'online')]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "publicIPAllocationMethod": "Static"
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2022-11-01",
            "name": "[variables('nsgName')]",
            "location": "[variables('location')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "Allow-HTTP",
                        "properties": {
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "80",
                            "sourceAddressPrefix": "[parameters('httpSourcePrefix')]",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 1001,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "Allow-SSH",
                        "properties": {
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "22",
                            "sourceAddressPrefix": "[parameters('sshSourcePrefix')]",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 1002,
                            "direction": "Inbound"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2022-11-01",
            "name": "[variables('vnetName')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": "[if(equals(parameters('landingZoneType'),'online'), array('10.0.0.0/16'), array(parameters('corpAddressSpace')))]"
                },
                "subnets": [
                    {
                        "name": "[variables('subnetName')]",
                        "properties": {
                            "addressPrefix": "[if(equals(parameters('landingZoneType'),'online'), '10.0.0.0/24', parameters('corpSubnetPrefix'))]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2022-11-01",
            "name": "[variables('nicName')]",
            "location": "[variables('location')]",
            "condition": "[equals(parameters('landingZoneType'), 'online')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', variables('ipName'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('subnetName'))]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('ipName'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2023-03-01",
            "name": "[parameters('name')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('vmSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('name')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "path": "[concat('/home/', parameters('adminUsername'), '/.ssh/authorized_keys')]",
                                    "keyData": "[parameters('adminPublicKey')]"
                                }
                            ]
                        }
                    }
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "Canonical",
                        "offer": "0001-com-ubuntu-server-jammy",
                        "sku": "22_04-lts-gen2",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "StandardSSD_LRS"
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {
        "publicIp": {
            "type": "string",
            "value": "[if(equals(parameters('landingZoneType'),'online'), reference(resourceId('Microsoft.Network/publicIPAddresses', variables('ipName'))).ipAddress, '')]"
        }
    }
}